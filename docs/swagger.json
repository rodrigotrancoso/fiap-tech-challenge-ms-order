{
    "openapi": "3.0.0",
    "info": {
        "title": "FIAP Tech Challenge - Microservico de Pedidos",
        "version": "1.0.0",
        "description": "API para gerenciamento de pedidos no sistema distribuido."
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Servidor Local"
        }
    ],
    "paths": {
        "/api/v1/orders": {
            "get": {
                "summary": "Listar todos os pedidos",
                "description": "Retorna a lista de todos os pedidos cadastrados.",
                "responses": {
                    "200": {
                        "description": "Lista de pedidos retornada com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "string"
                                            },
                                            "customerId": {
                                                "type": "string"
                                            },
                                            "items": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object"
                                                }
                                            },
                                            "status": {
                                                "type": "string",
                                                "enum": [
                                                    "PENDING",
                                                    "PREPARING",
                                                    "DONE",
                                                    "FINISHED"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Criar um novo pedido",
                "description": "Adiciona um novo pedido ao banco de dados.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "customerId": {
                                        "type": "string"
                                    },
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object"
                                        }
                                    }
                                },
                                "required": [
                                    "customerId",
                                    "items"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Pedido criado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "customerId": {
                                            "type": "string"
                                        },
                                        "items": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "PENDING",
                                                "PREPARING",
                                                "DONE",
                                                "FINISHED"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro na requisicao."
                    }
                }
            }
        },
        "/api/v1/orders/{id}": {
            "get": {
                "summary": "Obter um pedido pelo ID",
                "description": "Retorna um pedido especifico pelo seu ID.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Pedido encontrado."
                    },
                    "404": {
                        "description": "Pedido nao encontrado."
                    }
                }
            },
            "patch": {
                "summary": "Atualizar status de um pedido",
                "description": "Atualiza **somente** o status de um pedido.",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "status": {
                                        "type": "string",
                                        "enum": [
                                            "PENDING",
                                            "PREPARING",
                                            "DONE",
                                            "FINISHED"
                                        ]
                                    }
                                },
                                "required": [
                                    "status"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Status do pedido atualizado com sucesso.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "customerId": {
                                            "type": "string"
                                        },
                                        "items": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "PENDING",
                                                "PREPARING",
                                                "DONE",
                                                "FINISHED"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erro na requisicao."
                    },
                    "404": {
                        "description": "Pedido nao encontrado."
                    }
                }
            }
        }
    }
}